<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SignUpAvatarSnapchatActivity">

    <include
        android:id="@+id/sign_up_avatar_snapchat_activity_toolbar"
        layout="@layout/toolbar"/>

    <Button
        android:id="@+id/signUpUploadAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uploadAvatar"
        android:layout_gravity="center"
        android:text="Upload Avatar Picture" />

</LinearLayout>