<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SignUpPreferencesActivity">

    <include
        android:id="@+id/sign_up_preferences_activity_toolbar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Age"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="25dp"
                />

            <NumberPicker
                android:id="@+id/sign_up_preferences_min_age_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum Age"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="25dp"
                />

            <NumberPicker
                android:id="@+id/sign_up_preferences_max_age_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferred Ethnicities"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="25dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ethnicity_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sexual Preferences"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="25dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sexual_preference_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferred Relationships"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="25dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/type_of_relationship_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>