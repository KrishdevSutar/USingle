<resources>

    <!-- Base application theme. -->
    <!-- the theme applied to the application or activity -->
    <style name="MyActionBar.Text" parent="@android:style/TextAppearance">
        <!--<item name="android:textColor">#ffffff</item>-->
        <item name="android:textSize">25dp</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!--<item name="android:background">@drawable/gradient_1</item>-->
        <item name="android:titleTextStyle">@style/MyActionBar.Text</item>
    </style>

    <style name="AppTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="colorPrimary">@color/PrimaryAppColour</item>
        <item name="colorPrimaryDark">@color/PrimaryDarkAppColour</item>
        <!--<item name="android:background">#ffffff</item>-->
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/PrimaryAppColour</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RedMediumText" parent="android:Theme">
        <item name="android:textColor">#d50000</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="YellowMediumText" parent="android:Theme">
        <item name="android:textColor">#f57f17</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="GreenMediumText" parent="android:Theme">
        <item name="android:textColor">#64dd17</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="GreyLargeText" parent="android:Theme">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textSize">40dp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="GreyMediumText" parent="android:Theme">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="GreySmallText" parent="android:Theme">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="EditableTextStyle" parent="android:Theme">
        <item name="android:textColor">@color/lighter_grey</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/app_font</item>
    </style>

    <style name="MyBitmojiTheme" parent="SnapKitBitmojiFragment.Light">
        <!-- Update the theme with customized values here -->
    </style>

    <style name="HeaderBarBase">
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="HeaderBar" parent="HeaderBarBase">
    </style>
</resources>
